-- --------------------------------------------------------------------------
-- notes types
-- --------------------------------------------------------------------------

Notes-Types { Esterel-Technologies }  DEFINITIONS ::=

BEGIN

Note ::=
    SEQUENCE OF {
	SEQUENCE {
	    annot_object OID,
	    name STRING,
	    information {
		Enum ENUM {
		    NT_ENUM_VALUES {"FIRST", "SECOND", "LAST"},
		    NT_DEFAULT_VALUE "SECOND",
		    NT_FIELD_WIDTH  80},
		String STRING {
		    NT_FIELD_HEIGHT 20}
} } }

Unused ::=
    SEQUENCE OF {
	SEQUENCE {
	    annot_object OID,
	    name STRING,
	    information {
		Field STRING
} } }

END

-- --------------------------------------------------------------------------
-- annotation rules
-- --------------------------------------------------------------------------

Annotation-Rules { Esterel-Technologies }  DEFINITIONS ::=
BEGIN

    operator ::= {
	{Note T 1 1}
    }

    input ::= {
	{Note F 0 2}
    }

    output ::= {
	{Note F 0 1}
    }

END
